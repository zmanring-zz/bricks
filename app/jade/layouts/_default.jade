doctype html
html(lang="en")
  head
    title Bricks
    meta(charset='UTF-8')
    meta(content='', name='description')
    meta(content='Zach Manring', name='author')
    meta(content='3 days', name='revisit-after')

    // build:css styles/main.css
    link(href='/styles/main.css', rel='stylesheet')
    // endbuild

  body(class=page, data-points='Brick')
    header
    
    main
      block content

    footer
      button.drop drop
    
    .modal
      h2.score(data-points='0') Your score 
      form
        label
          | Name:
          input.name(type='text', maxlength='20', required)
        button.add(type='submit') add
        
      button.reload try again
      
      h2 Leaderboard
      .content

    // build:js scripts/main.js    
    script(src='/bower_components/jquery/dist/jquery.js')
    script(src='/bower_components/greensock/src/minified/TweenMax.min.js')
    script(src='/bower_components/underscore/underscore-min.js')
    script(src='/bower_components/firebase/firebase.js')
    script(src='/scripts/main.js')
    // endbuild
